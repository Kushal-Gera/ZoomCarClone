<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroundColor</item>
        <item name="colorPrimaryDark">@color/backgroundColorDark</item>
        <item name="colorAccent">@color/toolbarColor</item>

        <item name="android:statusBarColor">@color/backgroundColorDark</item>

    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#1976D2</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">#454545</item>

        <item name="dialogCornerRadius">12dp</item>

        <item name="android:background">@color/backgroundColor</item>
    </style>


    <style name="TimeDailog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/toolbarColor</item>

        <item name="android:textColor">@color/toolbarColor</item>
        <item name="android:textColorSecondary">#ABABAB</item>

        <item name="dialogCornerRadius">15dp</item>
    </style>


</resources>
